model customer {
  customerID Int @id @default(autoincrement())
  firstName String
  lastName String
  phone String
  email String
  password String
  streetAddress1 String
  streetAddress2 String
  city String
  state String
  zipcode Int
}

model vehicle {
  vehicleID Int @id @default(autoincrement())
  vin String
  type String
  year Int
  make String
  model String
  imgUrl String
}


model customerVehicle {
  customerVehicleID Int @id @default(autoincrement())
  customerID Int
  vehicleID Int
}



